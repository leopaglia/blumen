{
    "name": "leopaglia/blumen",
    "description": "A modified version of Lumen, with some plugins and MVC structure.",
    "type": "project",
    "require": {
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "darkaonline/swagger-lume": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "~0.9",
        "blumen/generators": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "repositories": [
        {
          "type": "vcs",
          "url": "https://github.com/leopaglia/blumen-mvc-generator"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
